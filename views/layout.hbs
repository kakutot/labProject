        </ul>
        <ul class="nav nav-pills pull-right">

        {{#if user}}
                <li role="presentation" style="padding:4px 7px;">
                    <a href="/users/logout" style="padding-bottom: 8px">LOGOUT</a></li>
                <li role="presentation" style="padding:4px 7px;margin-top: 8px">
