<!DOCTYPE html>
<html lang="en">
<head>
    <link href="stylesheets\reserv.css" rel="stylesheet">

</head>

<div class="jumbotron" style="border-bottom: 1px solid darkgrey;border-top: 1px solid darkgrey;height:150px">
    <section>
        <div class="container">
            <div>
                <div class="col-lg-12">
                        <img class="img-responsive thumbnail" src="images/sungl.jpg"
                             style="width: 600px;margin-left:300px;margin-top:-30px"  >
                </div>
            </div>
        </div>
    </section>
</div>

<div class="row">
    <div class="center-block" style="width:400px;">
        <h2 class="page-header">Yacht reservation</h2>
        <form action="/reservations" method ="post">
            <div class="form-group">
                <label for="user FName">Your first name</label>
                <input type="text" class="form-control" name="userFName"  aria-describedby="emailHelp" placeholder="Enter first name">
            </div>
            <div class="form-group">
                <label for="user LName">Your last name</label>
                <input type="text" class="form-control" name="userLName" aria-describedby="emailHelp" placeholder="Enter first name">
            </div>
            <div class="form-group">
                <label for="yachtName"> Yacht name </label>
                <input type="text" class="form-control" name="yacht">
            </div>
            <div class="form-group">
                <label for="date">Choose date</label>
                <input type="date" class="form-control" name="res_date"  id="datePicker">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
        {{#if user}}
            {{#if user.admin}}
          <hr>
                <h2 class="page-header">Yacht adding</h2>
                <form action="/reservations/add" method ="post">
                    <div class="form-group">
                        <label for="yacht name">Yacht name</label>
                        <input type="text" class="form-control" name="yachtName" placeholder="Enter yacht name">
                    </div>
                    <div class="form-group">
                        <label for="YachtDescription">Yacht description</label>
                        <textarea class="form-control" rows="3" name = "descr"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">ADD YACHT</button>
                 </form>

                <hr>
                <h2 class="page-header">Yacht deleting</h2>

                <form action="/reservations/del" method ="post">
                    <div class="form-group">
                        <label for="yacht name">Yacht name</label>
                        <input type="text" class="form-control" name="yachtName2" placeholder="Enter yacht name">
                    </div>
                    <button type="submit" class="btn btn-primary">DELETE YACHT</button>
                </form>
            {{/if }}
        {{/if}}
            <script>
                ( function changeDay() {
                    var today = new Date();
                    var dd = today.getDate();
                    var mm = today.getMonth()+1; //January is 0!
                    var yyyy = today.getFullYear();
                    if(dd<10){
                        dd='0'+dd
                    }
                    if(mm<10){
                        mm='0'+mm
                    }
                    today = yyyy+'-'+mm+'-'+dd;
                    document.getElementById("datePicker").setAttribute("min", today);
                })()
            </script>
    </div>
</div>
